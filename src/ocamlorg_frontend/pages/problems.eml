let exercises_sidebar_link
~title
~href
~current =
  <a class="focus:text-primary-600 active:text-primary-600 text-sm py-3 px-2 block <%s if current then "text-primary-600 font-semibold bg-primary-300 text-primary-600 border-l-2 border-primary-600" else "font-medium hover:bg-primary-100 hover:border-l-2 hover:border-primary-600" %>"" href="<%s href %>">
    <%s title %>
  </a>

let problems_sidebar
~problems
=
let open Data in
let render_problem_link (problem : Problem.t) =
  let href = "#" ^ problem.number in
  exercises_sidebar_link ~title:problem.title ~href ~current:false
in
let exercises_link_group
?(extra_html="")
title
link_html
=
  <details class="space-y-2 flex flex-col">
    <summary class="flex gap-4 justify-between text-sm font-semibold px-3 py-2 uppercase focus:text-primary-600 active:text-primary-600 hover:text-primary-300">
      <%s title %>
      <%s! Icons.chevron_down "h-6 w-6" %>
    </summary>
    <span class="ml-4 border-l"><%s! link_html %></span>
    <span class="ml-4 border-l"><%s! extra_html %></span>
  </details>
in
let problem_sidebar_links_by_tag ?tag title =
  <%s! exercises_link_group title
    (Problem.filter_tag ?tag problems |> List.fold_left (fun a b -> a ^ render_problem_link b) "")
  %>
in
  <p class="font-bold text-md px-3">Exercise Categories</p>
  <%s! problem_sidebar_links_by_tag ~tag:"list" "Lists" %>
  <hr>
  <%s! problem_sidebar_links_by_tag ~tag:"arithmetic" "Arithmetic" %>
  <hr>
  <%s! problem_sidebar_links_by_tag ~tag:"logic" "Logic and Codes" %>
  <hr>
  <%s! problem_sidebar_links_by_tag ~tag:"binary-tree" "Binary Trees" %>
  <hr>
  <%s! problem_sidebar_links_by_tag ~tag:"multiway-tree" "Multiway Trees" %>
  <hr>
  <%s! problem_sidebar_links_by_tag ~tag:"graph" "Graphs" %>
  <hr>
  <%s! problem_sidebar_links_by_tag "Miscellaneous" %>

let danger = function
  | `Beginner -> ""
  | `Intermediate -> "☡"
  | `Advanced -> "☡☡"

let difficulty_to_string = function
  | `Beginner -> "Beginner"
  | `Intermediate -> "Intermediate"
  | `Advanced -> "Advanced"

let render
?(difficulty_level = "All")
(problems : Data.Problem.t list)
=
Learn_layout.render
~title:"Exercises"
~description:"A list of exercises to work on your OCaml skills."
~canonical:Url.problems
~active_top_nav_item:Header.Learn
~left_sidebar_html:(Some(problems_sidebar ~problems))
~right_sidebar_html:None
~current:Exercises @@
  <div class="prose prose-orange max-w-full">
    <h1 class="font-bold mb-8">Exercises</h1>
    <div class="prose prose-orange max-w-full mb-5">
      <p>
        This section is inspired by
        <a href="https://www.ic.unicamp.br/~meidanis/courses/mc336/2006s2/funcional/L-99_Ninety-Nine_Lisp_Problems.html">
          Ninety-Nine Lisp Problems</a>
        which in turn was based on “<a href="https://sites.google.com/site/prologsite/prolog-problems/">Prolog problem
          list</a>” by Werner Hett. For
        each of these questions, some simple tests are shown—they may also serve
        to make the question clearer if needed. To work on these problems, we
        recommend you first <a href="<%s Url.getting_started %>">install OCaml</a> or use it <a
          href="<%s Url.playground %>">inside
          your browser</a>. The source of the following
        problems is available on
        <a href="https://github.com/ocaml/ocaml.org/tree/main/data/problems">GitHub</a>.
      </p>
      <p>
        Every exercise has a difficulty level, ranging from beginner to advanced.
        This difficulty level is indicated with the symbol "☡".
        The absence of marks represents the beginner level, one mark the intermediate level and two marks the advanced level.
      </p>
    </div>
    <div class="border-b border-solid border-zinc-300 leading-5 py-8 text-zinc-800">
      <form action="<%s Url.problems %>" method="GET">
        <label for="difficulty_level" class="sr-only">Difficulty</label>
        <%s! Forms.select
          ~attrs:{|id="difficulty_level" name="difficulty_level" onchange="this.form.submit()"|}
          ~options:[("All", "Any Difficulty"); ("beginner", "Beginner"); ("intermediate", "Intermediate"); ("advanced", "Advanced")]
          ~selected:difficulty_level
          "w-48" %>
      </form>
    </div>
    <% problems |> List.iter (fun (problem : Data.Problem.t) -> %>
    <div x-data="{statement: true}" id="<%s" problem.number %>
      >
      <div class="flex space-y-4 xl:space-y-0 flex-col xl:flex-row xl:justify-between">
        <span aria-hidden="true" class="danger invisible xl:visible" title="<%s difficulty_to_string problem.difficulty ^ " difficulty" %>"><%s danger problem.difficulty %></span>
        <h4 class="font-bold text-default">
          <%s problem.title %>
          <span aria-hidden="true" class="ml-2 visible xl:invisible" title="<%s difficulty_to_string problem.difficulty ^ " difficulty" %>"> <%s danger problem.difficulty %></span>
        </h4>
        <div class="w-0 h-0 overflow-hidden"><%s difficulty_to_string problem.difficulty ^ " difficulty" %></div>
        <div class="flex bg-body-600 bg-opacity-5 rounded-md p-1 items-center">
          <button
            class="px-3.5 h-9 font-medium flex space-x-2 items-center rounded-lg"
            x-on:click="statement = true"
            :class="statement ? 'bg-default dark:bg-dark-default text-primary-600': 'text-lighter' "
          >
            <%s! Icons.problem_statement "h-5 w-5" %>
            <span :class="statement ? 'text-default' : 'text-lighter'">Statement</span>
          </button>
          <button
            class="px-3.5 h-9 font-medium flex space-x-2 items-center rounded-lg"
            x-on:click="statement = false"
            :class="statement ? 'text-lighter': 'bg-default dark:bg-dark-default text-primary-600' "
          >
            <%s! Icons.problem_solution "h-5 w-5" %>
            <span :class="statement ? 'text-lighter' : 'text-default'">Solution</span>
          </button>
        </div>
      </div>

      <div x-show="statement"><%s! problem.statement %></div>

      <div x-show="!statement"><%s! problem.solution %></div>
    </div>
    <div class="border-t border-gray-200 my-12"></div>
    <% ); %>
  </div>
